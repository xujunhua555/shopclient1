<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/userInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/message_image"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:clickable="false"
                android:focusable="false"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_user_img" />

            <LinearLayout
                android:id="@+id/me_usermsg"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:orientation="vertical" >


                    <TextView
                        android:id="@+id/message_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="申报name"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/message_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="3dp"
                        android:text="10:23"
                        android:textColor="#666666"
                        android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/mtvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="这个是一个好尚品"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/messageContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="评论内容：就诊时间(08:00--16:00)"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mtvReplyContent"
            android:layout_width="wrap_content"
                       android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="回复内容：就诊时间(08:00--16:00)"
            android:textColor="#666666"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>