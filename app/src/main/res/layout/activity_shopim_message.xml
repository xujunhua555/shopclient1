<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_login"
    android:orientation="vertical"
     >

    <include
        android:id="@+id/rl_title"
        layout="@layout/title_sub_layout" />

    <ScrollView
        android:id="@+id/show_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:text="需要交换商品"
                android:textColor="#666666"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical" >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/mivShop"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_selected_carousel_two" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_10" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                            <TextView
                                android:id="@+id/mTvTitleMsg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:lines="1"
                                android:text="Title"
                                android:textColor="#4592B5"
                                android:textSize="@dimen/dp_16" />

                            <TextView
                                android:id="@+id/mtvState"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical|right"
                                android:text="Time"
                                android:textColor="#f00"
                                android:textSize="12dp" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/mTvMoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="3dp"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:text="MessageMessageMessageMessageMessageMessageMessageMessageMessageMessageMessage"
                            android:textColor="#666666"
                            android:textSize="@dimen/dp_14" />

                        <TextView
                            android:id="@+id/mtvTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:text="Time"
                            android:textColor="#666666"
                            android:textSize="@dimen/dp_14" />
                    </LinearLayout>
                </LinearLayout>




                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/bg_color_login" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:text="我的交换商品"
                android:textColor="#666666"
                android:textSize="18dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:orientation="vertical" >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/mivShopHuan"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_selected_carousel_two" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_10" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                            <TextView
                                android:id="@+id/mTvTitleHuan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:lines="1"
                                android:text="Title"
                                android:textColor="#4592B5"
                                android:textSize="@dimen/dp_16" />

                            <TextView
                                android:id="@+id/mtvStateHuan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical|right"
                                android:text="Time"
                                android:textColor="#f00"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/mTvMoneyHuan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="3dp"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:text="MessageMessageMessageMessageMessageMessageMessageMessageMessageMessageMessage"
                            android:textColor="#666666"
                            android:textSize="@dimen/dp_14" />

                        <TextView
                            android:id="@+id/mtvTimeHuan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:text="Time"
                            android:textColor="#666666"
                            android:textSize="@dimen/dp_14" />
                    </LinearLayout>
                </LinearLayout>




                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@color/bg_color_login" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/mPay"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/select_btn"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="确认交换"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>